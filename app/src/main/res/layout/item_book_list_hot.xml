<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:layout_margin="10dp"
    android:background="@drawable/shape_resource_bg">

    <ImageView
        android:id="@+id/iv_book_img"
        android:layout_width="100dp"
        android:layout_height="120dp"
        android:layout_centerVertical="true"
        android:paddingLeft="5dp"
        android:scaleType="fitXY"
        android:src="@color/colorAccent" />

    <TextView
        android:id="@+id/tv_book_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/iv_book_img"
        android:layout_marginTop="20dp"
        android:layout_toRightOf="@+id/iv_book_img"
        android:paddingLeft="20dp"
        android:text="1" />

    <TextView
        android:id="@+id/tv_book_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_book_name"
        android:layout_toRightOf="@+id/iv_book_img"
        android:paddingLeft="20dp"
        android:text="1" />


    <TextView
        android:id="@+id/tv_book_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_margin="20dp"
        android:gravity="center"
        android:text="2019/02/28"
        android:textSize="12sp" />

</RelativeLayout>