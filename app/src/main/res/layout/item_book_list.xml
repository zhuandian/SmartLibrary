<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:layout_margin="10dp"
    android:background="@drawable/shape_resource_bg">

    <ImageView
        android:id="@+id/iv_book_img"
        android:layout_width="100dp"
        android:layout_height="120dp"
        android:layout_centerVertical="true"
        android:paddingLeft="5dp"
        android:scaleType="fitXY"
        android:src="@color/colorAccent" />

    <TextView
        android:id="@+id/tv_book_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/iv_book_img"
        android:layout_marginTop="20dp"
        android:layout_toRightOf="@+id/iv_book_img"
        android:paddingLeft="20dp"
        android:text="1" />

    <TextView
        android:id="@+id/tv_book_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_book_name"
        android:layout_toRightOf="@+id/iv_book_img"
        android:paddingLeft="20dp"
        android:text="1" />


    <TextView
        android:id="@+id/tv_book_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_margin="20dp"
        android:gravity="center"
        android:text="2019/02/28"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/tv_book_borrow"
        android:layout_width="50dp"
        android:layout_height="30dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"
        android:layout_toLeftOf="@+id/tv_book_state"
        android:background="@color/colorPrimary"
        android:gravity="center"
        android:text="续借"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/tv_book_state"
        android:layout_width="50dp"
        android:layout_height="30dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_margin="20dp"
        android:background="@color/colorAccent"
        android:gravity="center"
        android:text="状态"
        android:textColor="@color/white" />


    <TextView
        android:id="@+id/tv_book_sold_out"
        android:layout_width="60dp"
        android:visibility="gone"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_margin="20dp"
        android:background="#999999"
        android:gravity="center"
        android:text="已报废"
        android:textColor="@color/white" />
</RelativeLayout>